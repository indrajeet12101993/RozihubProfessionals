<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_alignParentTop="true"
                  android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:id="@+id/toolbar"
                app:titleTextColor="@color/white"
                android:background="@color/colorsplash"
                android:layout_height="wrap_content">

        </androidx.appcompat.widget.Toolbar>


        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_marginStart="@dimen/_20sdp"
                          android:layout_marginEnd="@dimen/_20sdp"
                          android:layout_marginBottom="@dimen/_20sdp"
                          android:layout_marginTop="@dimen/_20sdp"
                          android:layout_height="wrap_content">


                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/textcolour"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:id="@+id/et_catogory"
                            android:textColor="@color/textcolour"
                            android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                            android:hint="Please Select Service  Catogory"
                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/textcolour"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:textColor="@color/textcolour"
                            android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                            android:hint="Please Select Service sub Catogory"
                            android:id="@+id/et_subcatogory"
                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/textcolour"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="numberDecimal"
                            android:textColor="@color/textcolour"
                            android:hint="Price"
                            android:id="@+id/et_price"
                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/textcolour"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="numberDecimal"
                            android:textColor="@color/textcolour"
                            android:id="@+id/et_time"
                            android:hint="Time"
                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>
    </LinearLayout>



    <RelativeLayout android:layout_width="match_parent"

                    android:id="@+id/relative_bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="save"
                  android:background="@drawable/square"
                  android:textSize="20sp"
                  android:id="@+id/tv_next"
                  android:paddingTop="10dp"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="20dp"
                  android:paddingBottom="10dp"
                  android:layout_marginBottom="20dp"
                  android:paddingStart="30dp"
                  android:textStyle="bold"
                  android:textAllCaps="true"
                  android:paddingEnd="28dp"
                  android:textColor="#FFF"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>


</RelativeLayout>