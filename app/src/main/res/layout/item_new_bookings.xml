<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true"
        android:elevation="4dp"
        android:layout_margin="@dimen/_4sdp"
        android:layout_height="wrap_content">
    <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="Booking Id:123"
                  android:textSize="@dimen/_12sdp"
                  android:padding="@dimen/_5sdp"
                  android:id="@+id/tv_bookingid"
                  android:textColor="@color/black"
                  android:layout_margin="@dimen/_2sdp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="Booking Date: 14th feb 2019"
                  android:textSize="@dimen/_12sdp"
                  android:padding="@dimen/_5sdp"
                  android:id="@+id/tv_bookingdate"
                  android:textColor="@color/black"
                  android:layout_margin="@dimen/_2sdp"
                  android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="Indrajeet"
                      android:textSize="@dimen/_12sdp"
                      android:id="@+id/tv_booker_user_name"
                      android:padding="@dimen/_5sdp"
                      android:layout_alignParentStart="true"
                      android:layout_margin="@dimen/_2sdp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="8368771983"
                      android:textSize="@dimen/_12sdp"
                      android:padding="@dimen/_5sdp"
                      android:id="@+id/tv_booker_user_mobile"
                      android:layout_alignParentEnd="true"
                      android:layout_margin="@dimen/_2sdp"
                      android:layout_height="wrap_content"/>

        </RelativeLayout>
        <TextView android:layout_width="wrap_content"
                  android:text="hair cut"
                  android:textSize="@dimen/_12sdp"
                  android:padding="@dimen/_5sdp"
                  android:id="@+id/tv_servicename"
                  android:layout_margin="@dimen/_2sdp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="B 225 chirag delhi "
                  android:textSize="@dimen/_12sdp"
                  android:padding="@dimen/_5sdp"
                  android:layout_margin="@dimen/_2sdp"
                  android:id="@+id/tv_adress"
                  android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent"
              android:background="#5e000000"
              android:layout_height="2dp">

        </View>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:text="New"
                      android:textSize="@dimen/_12sdp"
                      android:padding="@dimen/_5sdp"
                      android:layout_alignParentEnd="true"
                      android:textColor="@color/colorAccent"
                      android:layout_margin="@dimen/_2sdp"
                      android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
