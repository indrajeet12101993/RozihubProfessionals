<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/relative_bottom"
            android:layout_height="match_parent">


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_marginStart="@dimen/_20sdp"
                      android:layout_marginEnd="@dimen/_20sdp"
                      android:layout_marginBottom="@dimen/_20sdp"
                      android:layout_height="wrap_content">


            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/textcolour"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:id="@+id/et_catogory"
                        android:textColor="@color/textcolour"
                        android:hint="Service Category"
                        android:focusable="false"
                        android:textIsSelectable="false"
                        android:cursorVisible="false"
                        android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                        android:backgroundTint="@color/edittext_line_colour"
                        android:layout_height="wrap_content"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/textcolour"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:textColor="@color/textcolour"
                        android:hint="Service Sub Category"
                        android:id="@+id/et_subcatogory"
                        android:focusable="false"
                        android:textIsSelectable="false"
                        android:cursorVisible="false"
                        android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                        android:backgroundTint="@color/edittext_line_colour"
                        android:layout_height="wrap_content"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:layout_width="wrap_content"
                      android:text="Business Working days"
                      android:textColor="@color/textcolour"
                      android:layout_marginStart="@dimen/_5sdp"
                      android:layout_marginTop="@dimen/_5sdp"
                      android:textStyle="bold"
                      android:textSize="@dimen/_15sdp"
                      android:layout_height="wrap_content"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Sunday"
                          android:textColor="@color/textcolour"
                          android:textSize="@dimen/_15sdp"
                          android:layout_height="wrap_content"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cb_sunday"
                        android:theme="@style/MyCheckBox"
                        android:layout_alignParentEnd="true"
                />

            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"

                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Monday"
                          android:textColor="@color/textcolour"
                          android:textSize="@dimen/_15sdp"
                          android:layout_height="wrap_content"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:id="@+id/cbmonday"
                        android:theme="@style/MyCheckBox"
                        android:layout_alignParentEnd="true"
                />

            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"

                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Tuesday"
                          android:textColor="@color/textcolour"
                          android:textSize="@dimen/_15sdp"
                          android:layout_height="wrap_content"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbtuesday"
                        android:theme="@style/MyCheckBox"
                        android:layout_alignParentEnd="true"
                />

            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"

                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Wednesday"
                          android:textColor="@color/textcolour"
                          android:textSize="@dimen/_15sdp"
                          android:layout_height="wrap_content"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbwednesday"
                        android:theme="@style/MyCheckBox"
                        android:layout_alignParentEnd="true"
                />

            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"

                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Thursday"
                          android:textColor="@color/textcolour"
                          android:textSize="@dimen/_15sdp"
                          android:layout_height="wrap_content"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbThrusday"
                        android:theme="@style/MyCheckBox"
                        android:layout_alignParentEnd="true"
                />

            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"

                          android:text="Friday"
                          android:textColor="@color/textcolour"
                          android:textSize="@dimen/_15sdp"

                          android:layout_height="wrap_content"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbfriday"
                        android:theme="@style/MyCheckBox"
                        android:layout_alignParentEnd="true"
                />

            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Saturday"
                          android:textColor="@color/textcolour"
                          android:textSize="@dimen/_15sdp"
                          android:layout_height="wrap_content"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbsaturday"
                        android:theme="@style/MyCheckBox"
                        android:layout_alignParentEnd="true"
                />

            </RelativeLayout>



            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/textcolour"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/textcolour"
                        android:hint="Booking Per Hour"
                        android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                        android:id="@+id/et_booking_per_hour"
                        android:backgroundTint="@color/edittext_line_colour"
                        android:layout_height="wrap_content"
                />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/relative_bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Previous"
                  android:background="@drawable/square_prvious"
                  android:textSize="20sp"
                  android:id="@+id/tv_previous"
                  android:paddingTop="10dp"
                  android:layout_toLeftOf="@+id/tv_next"
                  android:layout_marginEnd="20dp"
                  android:paddingBottom="10dp"
                  android:visibility="gone"
                  android:layout_marginBottom="20dp"
                  android:paddingStart="30dp"
                  android:textStyle="bold"
                  android:textAllCaps="true"
                  android:paddingEnd="28dp"
                  android:textColor="#FFF"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="Submit"
                  android:background="@drawable/square"
                  android:textSize="20sp"
                  android:id="@+id/tv_next"
                  android:paddingTop="10dp"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="20dp"
                  android:paddingBottom="10dp"
                  android:layout_marginBottom="20dp"
                  android:paddingStart="30dp"
                  android:textStyle="bold"
                  android:textAllCaps="true"
                  android:paddingEnd="28dp"
                  android:textColor="#FFF"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>


</RelativeLayout>