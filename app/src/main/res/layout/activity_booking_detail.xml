<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            app:titleTextColor="@color/white"
            android:background="@color/colorsplash"
            android:layout_height="wrap_content">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_margin="@dimen/_20sdp"
                  android:background="@drawable/dot_square"
                  android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="2"
                      android:layout_height="wrap_content">


            <TextView android:layout_width="match_parent"
                      android:text="Booking Id :"
                      android:textSize="@dimen/_12sdp"
                      android:padding="@dimen/_5sdp"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>


            <TextView android:layout_width="match_parent"
                      android:text="123"
                      android:textSize="@dimen/_12sdp"
                      android:padding="@dimen/_5sdp"
                      android:id="@+id/tv_bookingid"
                      android:layout_weight="1"
                      android:gravity="end"
                      android:textColor="@color/black"
                      android:layout_margin="@dimen/_2sdp"
                      android:layout_height="wrap_content"/>


        </LinearLayout>
        <View android:layout_width="match_parent"
              android:background="@color/colorAccent"
              android:layout_height="1dp">

        </View>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="2"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="Booking Date : "
                      android:textSize="@dimen/_12sdp"
                      android:layout_weight="1"
                      android:padding="@dimen/_5sdp"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text=" 14th feb 2019"
                      android:textSize="@dimen/_12sdp"
                      android:padding="@dimen/_5sdp"
                      android:id="@+id/tv_bookingdate"
                      android:gravity="end"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:layout_margin="@dimen/_2sdp"
                      android:layout_height="wrap_content"/>


        </LinearLayout>
        <View android:layout_width="match_parent"
              android:background="@color/colorAccent"
              android:layout_height="1dp">

        </View>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="2"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="UserName :"
                      android:textSize="@dimen/_12sdp"
                      android:layout_weight="1"
                      android:padding="@dimen/_5sdp"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="Indrajeet"
                      android:textSize="@dimen/_12sdp"
                      android:padding="@dimen/_5sdp"
                      android:id="@+id/tv_booker_user_name"
                      android:textColor="@color/black"
                      android:gravity="end"
                      android:layout_weight="1"
                      android:layout_margin="@dimen/_2sdp"
                      android:layout_height="wrap_content"/>


        </LinearLayout>
        <View android:layout_width="match_parent"
              android:background="@color/colorAccent"
              android:layout_height="1dp">

        </View>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="2"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="User Mobile :"
                      android:textSize="@dimen/_12sdp"
                      android:layout_weight="1"
                      android:padding="@dimen/_5sdp"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="8368771983"
                      android:textSize="@dimen/_12sdp"
                      android:padding="@dimen/_5sdp"
                      android:id="@+id/tv_booker_user_mobile"
                      android:textColor="@color/black"
                      android:gravity="end"
                      android:layout_weight="1"
                      android:layout_margin="@dimen/_2sdp"
                      android:layout_height="wrap_content"/>


        </LinearLayout>
        <View android:layout_width="match_parent"
              android:background="@color/colorAccent"
              android:layout_height="1dp">

        </View>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="2"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="Service name :"
                      android:textSize="@dimen/_12sdp"
                      android:layout_weight="1"
                      android:padding="@dimen/_5sdp"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="hair cut"
                      android:textSize="@dimen/_12sdp"
                      android:padding="@dimen/_5sdp"
                      android:id="@+id/tv_servicename"
                      android:textColor="@color/black"
                      android:gravity="end"
                      android:layout_weight="1"
                      android:layout_margin="@dimen/_2sdp"
                      android:layout_height="wrap_content"/>


        </LinearLayout>
        <View android:layout_width="match_parent"
              android:background="@color/colorAccent"
              android:layout_height="1dp">

        </View>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="2"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:text="Booking Adress :"
                      android:textSize="@dimen/_12sdp"
                      android:layout_weight="1"
                      android:padding="@dimen/_5sdp"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="0dp"
                      android:text="B 225 chirag delhi "
                      android:textSize="@dimen/_12sdp"
                      android:padding="@dimen/_5sdp"
                      android:id="@+id/tv_adress"
                      android:textColor="@color/black"
                      android:gravity="end"
                      android:layout_weight="1"
                      android:layout_margin="@dimen/_2sdp"
                      android:layout_height="wrap_content"/>


        </LinearLayout>
        <View android:layout_width="match_parent"
              android:background="@color/colorAccent"
              android:layout_height="1dp">

        </View>

    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"

                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Payment"
                  android:background="@drawable/square_prvious"
                  android:textSize="20sp"
                  android:id="@+id/tv_payment"
                  android:paddingTop="10dp"
                  android:layout_toLeftOf="@+id/tv_cancel"
                  android:layout_marginEnd="20dp"
                  android:paddingBottom="10dp"
                  android:layout_marginBottom="20dp"
                  android:paddingStart="30dp"
                  android:textStyle="bold"
                  android:textAllCaps="true"
                  android:paddingEnd="28dp"
                  android:textColor="#FFF"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="Cancel"
                  android:background="@drawable/square"
                  android:textSize="20sp"
                  android:id="@+id/tv_cancel"
                  android:paddingTop="10dp"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="20dp"
                  android:paddingBottom="10dp"
                  android:layout_marginBottom="20dp"
                  android:paddingStart="30dp"
                  android:textStyle="bold"
                  android:textAllCaps="true"
                  android:paddingEnd="28dp"
                  android:textColor="#FFF"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>